<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <!-- Background Image dengan Animasi Loop -->
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_smpn2"
        android:alpha="0.3"
        android:contentDescription="Background Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gradient Overlay untuk readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_blue"
        android:alpha="0.7" />

    <!-- Logo Statis di tengah -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_smpn2"
        android:contentDescription="Logo SMP Negeri 2"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <!-- Title dengan style modern -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERPUSTAKAAN"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- School name dengan style elegan -->
    <LinearLayout
        android:id="@+id/layoutSchoolInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvSchoolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMP NEGERI 2 KLAKAH"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:letterSpacing="0.15"
            android:alpha="0.95" />

        <TextView
            android:id="@+id/tvSchoolLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kabupaten Lumajang"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:letterSpacing="0.05"
            android:layout_marginTop="4dp"
            android:alpha="0.85" />

    </LinearLayout>

    <!-- Tap to continue dengan animasi berkedip -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icon Touch -->
        <ImageView
            android:id="@+id/ivTouchIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:tint="@color/white"
            android:alpha="0.7"
            android:contentDescription="Tap Icon" />

        <TextView
            android:id="@+id/tvTapToContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ketuk layar untuk melanjutkan"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
