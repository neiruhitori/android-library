<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/purple_light"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvCover"
            android:layout_width="90dp"
            android:layout_height="130dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/ivBukuCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Book Cover" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvBukuJudul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Judul Buku"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/cvCover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cvCover" />

        <TextView
            android:id="@+id/tvBukuPenulis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Penulis"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawableTint="@color/green_accent"
            android:drawablePadding="6dp"
            app:layout_constraintStart_toStartOf="@id/tvBukuJudul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBukuJudul" />

        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/tvBukuJudul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBukuPenulis">

            <TextView
                android:id="@+id/tvBukuTahun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawableTint="@color/green_accent"
                android:drawablePadding="4dp" />

            <TextView
                android:id="@+id/tvBukuTipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tahunan"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/bg_chip_green"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvBukuDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Deskripsi buku..."
            android:textSize="12sp"
            android:textColor="@color/text_hint"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/tvBukuJudul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutInfo"
            app:layout_constraintBottom_toBottomOf="@id/cvCover" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
