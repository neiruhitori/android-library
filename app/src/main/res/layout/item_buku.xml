<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Book Cover -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvCover"
            android:layout_width="100dp"
            android:layout_height="140dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBukuCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Book Cover" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Stock Badge -->
        <TextView
            android:id="@+id/tvStokBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 tersedia"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/status_available"
            android:background="@drawable/bg_badge_available"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/cvCover"
            app:layout_constraintTop_toBottomOf="@id/cvCover" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvBukuJudul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Judul Buku"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/cvCover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cvCover" />

        <!-- Author -->
        <TextView
            android:id="@+id/tvBukuPenulis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Penulis"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawableTint="@color/blue_primary"
            android:drawablePadding="6dp"
            app:layout_constraintStart_toStartOf="@id/tvBukuJudul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBukuJudul" />

        <!-- Info Container -->
        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/tvBukuJudul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBukuPenulis">

            <TextView
                android:id="@+id/tvBukuTahun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawableTint="@color/blue_primary"
                android:drawablePadding="4dp" />

            <TextView
                android:id="@+id/tvBukuTipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tahunan"
                android:textSize="11sp"
                android:textColor="@color/blue_primary"
                android:textStyle="bold"
                android:background="@color/category_bg_1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvBukuDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Deskripsi buku..."
            android:textSize="12sp"
            android:textColor="@color/text_hint"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/tvBukuJudul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutInfo" />

        <!-- Popularity Badge (if needed) -->
        <ImageView
            android:id="@+id/ivPopularBadge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/btn_star_big_on"
            android:tint="@color/orange_accent"
            android:visibility="gone"
            android:contentDescription="Popular Book"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
