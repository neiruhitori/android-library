<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".activity.DetailBukuActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="@color/white"
                android:contentDescription="Back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Buku"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Book Cover -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvBukuCover"
                android:layout_width="220dp"
                android:layout_height="320dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/ivBukuCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Book Cover" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Stock Status Badge -->
            <LinearLayout
                android:id="@+id/layoutStokStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_badge_available"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/presence_online"
                    android:tint="@color/status_available"
                    android:contentDescription="Status Icon" />

                <TextView
                    android:id="@+id/tvStokStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 Buku Tersedia"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/status_available"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <!-- Book Title -->
            <TextView
                android:id="@+id/tvBukuJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Buku"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textAlignment="center"
                android:layout_marginTop="20dp" />

            <!-- Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informasi Buku"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Penulis -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="@color/blue_primary"
                            android:contentDescription="Author Icon" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Penulis"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvBukuPenulis"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nama Penulis"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginBottom="12dp" />

                    <!-- Tahun Terbit -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_recent_history"
                            android:tint="@color/blue_primary"
                            android:contentDescription="Year Icon" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Tahun Terbit"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvBukuTahun"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2024"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginBottom="12dp" />

                    <!-- ISBN -->
                    <LinearLayout
                        android:id="@+id/layoutIsbn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_search"
                            android:tint="@color/blue_primary"
                            android:contentDescription="ISBN Icon" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="ISBN"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvBukuIsbn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:id="@+id/dividerIsbn"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone" />

                    <!-- Kota Cetak -->
                    <LinearLayout
                        android:id="@+id/layoutKotaCetak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_map"
                            android:tint="@color/blue_primary"
                            android:contentDescription="City Icon" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Kota Cetak"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvBukuKotaCetak"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:id="@+id/dividerKotaCetak"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone" />

                    <!-- Tipe Buku -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            android:tint="@color/blue_primary"
                            android:contentDescription="Type Icon" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Tipe Buku"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvBukuTipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tahunan"
                            android:textSize="12sp"
                            android:textColor="@color/blue_primary"
                            android:textStyle="bold"
                            android:background="@color/category_bg_1"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginBottom="12dp" />

                    <!-- Total Stok -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:tint="@color/blue_primary"
                            android:contentDescription="Stock Icon" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Total Stok"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvTotalStok"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10 buku"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginBottom="12dp" />

                    <!-- Sedang Dipinjam -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_rotate"
                            android:tint="@color/orange_accent"
                            android:contentDescription="Borrowed Icon" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Dipinjam"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvSedangDipinjam"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5 buku"
                            android:textSize="14sp"
                            android:textColor="@color/orange_accent"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:drawableStart="@android:drawable/ic_menu_info_details"
                        android:drawableTint="@color/blue_primary"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvBukuDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi buku akan ditampilkan di sini..."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Statistics Card (if has borrowing history) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvStatistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statistik Peminjaman"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:drawableStart="@android:drawable/ic_menu_sort_by_size"
                        android:drawableTint="@color/blue_primary"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvTotalPeminjaman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total dipinjam: 120 kali"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
